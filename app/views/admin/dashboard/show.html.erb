<h1>Admin Dashboard</h1>

<h3>Video Stats
  <%= link_to 'Add Video', new_admin_video_url, class: 'btn btn-primary', style: 'float: right' %>
</h3>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Publication Date</th>
      <th>Price</th>
      <th>Purchases</th>
      <th>Revenue Generated</th>
      <th>Management</th>
    </tr>
  </thead>
  <tbody>
    <% @videos.each do |video| 
      vid = VideoDecorator.decorate(video)
  %>
    <tr>
      <td><%= vid.link %></td>
      <td><%= vid.publication %></td>
      <td><%= vid.price %></td>
      <td><%= vid.purchases.count %></td>
      <td><%= vid.revenue %></td>
      <td>
        <%= link_to 'Edit', edit_admin_video_url(video) %> | 
        <%= link_to 'Delete', admin_video_url(video), method: :delete, confirm: 'Are you sure?' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
