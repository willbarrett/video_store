<!DOCTYPE html>
<html>
<head>
  <title>VideoStore</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="navbar">
      <div class="navbar-inner">
        <%= link_to 'Video Store', root_url, class: 'brand' %>
        <ul class="nav">
          <li><%= link_to 'Home', root_url %></li>
          <% if current_user %>
            <% if current_user.admin? %>
              <li>
                <%= link_to 'Admin Section', admin_root_url %>
              </li>
            <% end %>
            <li>
              <%= link_to 'Log Out', session_url, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Log In', new_session_url %>
            </li>
            <li>
              <%= link_to 'Sign Up', new_user_url %>
            </li>
          <% end %>
        </ul>
      </div>
  </div>

  <div id="alert-block">
    <% flash.each do |type, message| %>
      <div class="alert" data-alert="alert">
        <a class="close" data-dismiss="alert" href="#">Ã—</a>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
